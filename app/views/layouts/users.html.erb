  <%= javascript_include_tag "drop_down_menu", "crawler", "targetFunctions" %>

  
  <%= stylesheet_link_tag 'common/main' %>
  

  <%= javascript_tag "Ajax.Responders.register({
    onCreate: function(){ document.body.style.cursor = 'progress'},
    onComplete: function(){ document.body.style.cursor = 'default' }
  });"
  %>
  
</head>
<body onload="MM_preloadImages('/images/css/btn-bg-grass-ovr.jpg','/images/css/btn-bg-clay-ovr.jpg','/images/css/btn-bg-ice-ovr.jpg','/images/css/btn-bg-wood-ovr.jpg','/images/css/btn-bg-asphalt-ovr.jpg','/images/css/btn-bg-mat-ovr.jpg')">
  
  <div id="content">
    <div id="header">
      <%= render :partial => "layouts/header" %>
    </div><!-- End Header -->
    
    <div id="columns">
      <!-- Left Column -->	
      <div id="column-left" class="floatleft">
        <%= render :partial => "layouts/left_column" %>
      </div><!-- End Left Column -->
    
    <!-- center column -->
    <div id="column-center">
      <div id="top-nav">
        <ul>
          <li class="home"><a href="/home" name="home"></a></li>
          <li class="main">
            <%= link_to_remote "Invite Fans",
                        {:url => {:controller => "users", :action => "invite_friend"},
                        :complete => "Effect.toggle('pop-up', 'appear', {duration: .5})" },
                        {:name => "invite-friends"}
              %>
          </li>
          <li class="main"><a href="/preferences" name="change-teams">Change Teams</a></li>
          <li class="main">
            <%= link_to_remote "Save Layout", 
                        {:url => { :controller => "user_preferences", :action => "save_drag_n_drop"}},
                        {:name => "save-layout"}
            %>
          </li>
          <li class="main"><a href="/preferences" name="change-teams">Change Teams</a></li>
          <li class="main"><a href="/logout">Logout</a></li>
          <li class="help"><a href="logged-in-general.html" name="help"></a></li>
        </ul>
        
        <div class="clear"></div>
      </div>
      
      <!-- begin main content-->
      <%= yield %>
      
    </div><!-- End Center Column -->
    
    <!-- Right Column -->
    <div id="column-right">
      <div id="ad-right"><img src="/images/css/advertisement-rightcolumn.jpg" alt="Advertiser" name="ad-right"/></div>
      
      <!-- Fanclub -->
      <div class="fanclub">
        <%= render :partial => "layouts/fan_club" %>
      </div>
      

      <!-- Chalkboard -->
      <div id="chalkboard" class="chalkboard">
        <%= render :partial => 'users/partials/chalk_board' %>
      </div>
            
    </div><!-- End right column -->
    
    <div class="clear"></div>
    
  </div><!-- End Body Columns -->
     
  <!-- Navigation low -->  
  <div id="nav-low">
    <ul>
      <li class="noborder"><a href="*" name="sport01">Sport</a></li>
      <li><a href="*" name="sport01">Sport</a></li>
      <li><a href="*" name="sport01">Sport</a></li>
      <li><a href="*" name="sport01">Sport</a></li>
      <li><a href="*" name="sport01">Sport</a></li>
      <li><a href="*" name="sport01">Sport</a></li>
      <li><a href="*" name="sport01">Sport</a></li>
      <li><a href="*" name="sport01">Sport</a></li>
      <li><a href="*" name="sport01">Sport</a></li>
      <li><a href="*" name="sport01">Sport</a></li>
      <li><a href="*" name="sport01">Sport</a></li>
      <li><a href="*" name="sport01">Sport</a></li>
      <div class="clear"></div>
    </ul>
  </div>
  
</div> <!-- End main page content -->

<!-- footer -->
<div id="footer">
  <ul>
    <li class="social"><img src="/images/css/footer-links-twitter.jpg" name="twitter" alt="Follow us on Twitter" /></li>
    <li class="social"><img src="/images/css/footer-links-facebook.jpg" name="facebook" alt="Follow us on Facebook" /></li>
    <li class="social"><img src="/images/css/footer-links-homepage.jpg" name="homepage" alt="Make us your homepage" /></li>
    
    <li class="floatleft">&copy; SportBookPage.com</li>
    <li class="floatleft"><a href="mailto:*" name="contact-info">info@sportbookpage.com</a></li>
    <li class="floatleft">Further info if desired</li>
   
    <div class="clear"></div>    
  </ul>
</div>
    
</body>
</html>



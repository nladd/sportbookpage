<div class="close" onclick="Effect.toggle('pop-up', 'appear', {duration: .5})"></div>
<span>            
  <% form_remote_tag(:url => {:controller => 'users', :action => 'invite_friend'}, :html => { :multipart => true, :id => 'form' }) do %>
    <label>
      Enter the e-mail address of the fan you'd like to invite. Multiple addresses can be separated with a comma (e.g. Tom.Sawyer@hotmail.com, HuckFinnWins@aol.com, ...)<br/><br/>
      Email Address <i>(Separate by commas)</i>
    </label>
    <input name="emails" type="text" />
    <input name="submit" type="submit" class="submit" value="Send" />
    <div class="clear"></div>
  <% end %>
  <p>
    Include a personal message: <i>(optional)</i><br/>
    <%= text_area_tag('message', nil, { :size => '38x5', :value => '' }) %>
  </p>
</span>
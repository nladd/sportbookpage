
<div class="head">
  <h1 name="section-title"><%= @drop_title %></h1>
  <h2><a href="*" name="all-tagged-teams">All</a>&nbsp;/&nbsp;
  <a href="*" name="select-tagged-team">Tagged</a>&nbsp;/&nbsp;
  <a href="javascript:void(0);" id="<%= @drop_id %>ToggleText" name="Expand" onclick="expand_collapse_target('<%= @drop_id %>');">Expand</a></h2>
</div>

<div id="<%= @drop_id %>_scroll-up" class="scroll-up" onmouseout="stopScroll();"><a href="*" name="scroll-up" class="up"></a></div>
  

<%
  @leagues.size.times do |@i|
%>

  <ul id="<%= @drop_id %>_content">
    <li class="subhead"><%= @leagues[@i].abbreviation %> Scoreboard</li>

    <li>
      <span class="clps06col clps">Date</span>
      <span class="clps06col clps">Home</span>
      <span class="clps08col clps">&nbsp;</span>
      <span class="clps06col clps">Away</span>
      <span class="clps08col clps">&nbsp;</span>
      <div class="clear"></div>
    </li>

  
  <%
    @abbr = (@leagues[@i].abbreviation).gsub(/[\s']/, "_")
    @size = @games[@i].size
    @j = -1
    @games[@i].each do |game|
    
      @j += 1
      
  %>

  <%= render :partial => "draggables/partials/more_less" %>

    <li>
      <span class="clps06col clps"><%= game.start_date_time.strftime("%m/%d") %></span>
      <span class="clps06col clps" style="<%= 'font-weight: bold' if game.t1_outcome == 'win' %>"><a href="/team/<%= game.t1_id %>"><%= game.t1_last_name %></a></span>
      <span class="clps08col clps" style="<%= 'font-weight: bold' if game.t1_outcome == 'win' %>"><%= game.t1_score %></span>
      <span class="clps06col clps" style="<%= 'font-weight: bold' if game.t2_outcome == 'win' %>"><a href="/team/<%= game.t2_id %>"><%= game.t2_last_name %></a></span>
      <span class="clps08col clps" style="<%= 'font-weight: bold' if game.t2_outcome == 'win' %>"><%= game.t2_score %></span>
      <% if game.event_status == "post-event" %>
        <span class="clps06col clps">Final <%= link_to_remote "Recap",
             :url => {:controller => "article", :action => "event_recap"},
             :with => "'drop_id=#{@drop_id}&amp;dragged_id=#{@dragged_id}&amp;event_id=#{game.event_id}&amp;prev_partial=#{@partial_path}'" %>
        </span>
      <% elsif game.event_status == "mid-event" || game.event_status == "intermission" 
        sport = Affiliation.get_sport_by_league_id(@leagues[@i].affiliation_id)
        state = Event.get_event_state(game.event_id, sport.full_name)
    
      %>
        <span class="clps06col clps">
          <%= state %>
        </span>
      <% end %>
      <div class="clear"></div>
    </li>

<%    
    end # close games loop
    if ( (@j > -1) && (@j > 11) ) && (@j % 12 > 0) then
%>
    <div id="<%= @drop_id %>_more_<%= @abbr + '_' + (@size).to_s %>"> 
     <li style="height: 20px">
        <span class="clps05col">
          <a href="javascript:void(0);" onclick="finalShowLess(<%= "'#{@drop_id}', '#{@abbr}', #{@size}" %>); ">Less...</a>
        </span>
      </li>
    </div>
<% end %>
    </div> <!-- close last <hide_#> -->
  </ul>
<%
  end   # close leagues loop
%>

<div id="<%= @drop_id %>_scroll-down" class="scroll-dwn" onmouseout="stopScroll();"><a href="*" name="scroll-dwn" class="dwn"></a></div>

<%=
  javascript_tag "
      Event.observe($('#{@drop_id}_scroll-up'), 'mouseover', scrollDropArea.bindAsEventListener($('#{@drop_id}_content'), '#{@drop_id}_content', -5));
      Event.observe($('#{@drop_id}_scroll-down'), 'mouseover', scrollDropArea.bindAsEventListener($('#{@drop_id}_content'), '#{@drop_id}_content', 5));"
  
%>



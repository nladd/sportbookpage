
<%= render :partial => "draggables/partials/header" %>

  <ul id="<%= @drop_id %>_content">

<% @leagues.size.times do |i| %>
  
   <li class="subhead"><%= @leagues[i].abbreviation %> Top Stories</li>
   
<% @articles[i].size.times do |a| %>

    <li>
      <h1>
        <%= link_to_remote @titles[i][a],
           :url => {:controller => "article", :action => "article"},
           :with => "'drop_id=#{@drop_id}&amp;document_id=#{@articles[i][a].document_id}&amp;prev_partial=#{@partial_path}&amp;dragged_id=#{@dragged_id}'"
        %>
        <em><%= @dates[i][a].strftime("%m/%d %I:%M%p") %></em>
      </h1>
      <p><%= @abstracts[i][a] %></p>
      <em>
        <%= link_to_remote "Read more",
           :url => {:controller => "article", :action => "article"},
           :with => "'drop_id=#{@drop_id}&amp;document_id=#{@articles[i][a].document_id}&amp;prev_partial=#{@partial_path}&amp;dragged_id=#{@dragged_id}'"
        %>
      </em>
    </li>
  
<%
    end  #close articles loop
    
  end  #close leagues loop
%>

  </ul>


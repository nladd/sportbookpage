  
    
  <div id="holder">
    <ul id="draggables_list">
      <%
        leagues = Affiliation.get_all_leagues
        show_playoffs = false
        leagues.each do |league|
            if Affiliation.is_in_post_season(league.affiliation_id)
                show_playoffs = true
                break
            end
        end
        
        if show_playoffs
      %>
        <li class="drop_item" id="playoffs">
          <a href="#" name="draggable-btn-01" title="Drag me!">Playoffs</a>
        </li>
      <% end %>
        
      <li class="drop_item" id="scoreboard"><a name="draggable-btn-01" title="Drag me!">Scores</a></li>
      <li class="drop_item" id="schedule"><a name="draggable-btn-02" title="Drag me!">Schedules</a></li>
      <li class="drop_item" id="lines"><a name="draggable-btn-03" title="Drag me!">Lines</a></li>
      <li class="drop_item" id="headlines"><a name="draggable-btn-04" title="Drag me!">Headlines</a></li>
      <li class="drop_item" id="standings"><a name="draggable-btn-05" title="Drag me!">Standings</a></li>
      
      <li class="drop_item" id="college_scoreboard"><a name="draggable-btn-01" title="Drag me!">College Scores</a></li>
      <li class="drop_item" id="college_schedule"><a name="draggable-btn-02" title="Drag me!">College Schedules</a></li>
      <li class="drop_item" id="college_lines"><a name="draggable-btn-03" title="Drag me!">College Lines</a></li>
      <li class="drop_item" id="college_headlines"><a name="draggable-btn-04" title="Drag me!">College Headlines</a></li>
      <li class="drop_item" id="college_standings"><a name="draggable-btn-05" title="Drag me!">College Standings</a></li>
    </ul>
    <div class="clear"></div>
  </div>


  <%= sortable_element('draggables_list', :tag => 'li', :overlap => 'horizontal', :constraint => false, :scroll => 'window') %>




<div class="head">
  <h1 name="section-title"><%= @drop_title %></h1>
  <h2><a href="*" name="all-tagged-teams">All</a>&nbsp;/&nbsp;
  <a href="*" name="select-tagged-team">Tagged</a>&nbsp;/&nbsp;
  <a href="javascript:void(0);" id="<%= @drop_id %>ToggleText" name="Expand" onclick="expand_collapse_target('<%= @drop_id %>');">Expand</a></h2>
</div>

<div id="<%= @drop_id %>_scroll-up" class="scroll-up" onmouseout="stopScroll();"><a href="*" name="scroll-up" class="up"></a></div>

<%
  @leagues.size.times do |@i|  
%>

  <ul id="<%= @drop_id %>_content">
    <li class="subhead"><%= @leagues[@i].abbreviation %> Schedule</li>

    <li>
      <span class="clps05col clps">Date<br/>Time</span>
      <span class="clps05col clps">Home</span>
      <span class="clps05col clps">Away</span>
      <span class="clps05col clps">&nbsp;</span>
      <span class="clps05col clps">TV</span>
      <div class="clear"></div>
    </li>
  
<%
    @abbr = (@leagues[@i].abbreviation).gsub(/[\s']/, "_")
    @size = @games[@i].size
    @j = -1
    
    logger.info "#{@abbr} games = #{@games[@i].size}"
    
    
    @games[@i].each do |game|
      
      @j += 1
%>
    
    <li>
      <span class="clps05col clps"><%= game.start_date_time.strftime("%a, %m/%d") %><br/><%= game.start_date_time.strftime("%I:%M%P") %></span>
      <span class="clps05col clps"><a href="/team/<%= game.t1_id %>"><%= game.t1_last_name %></a></span>
      <span class="clps05col clps"><a href="/team/<%= game.t2_id %>"><%= game.t2_last_name %></a></span>
      <% if game.event_status == "pre-event" %>
        <span class="clps05col clps">
          <%= link_to_remote "Preview",
           :url => {:controller => "article", :action => "event_preview"},
           :with => "'drop_id=#{@drop_id}&amp;dragged_id=#{@dragged_id}&amp;event_id=#{game.event_id}&amp;prev_partial=#{@partial_path}'" %>
        </span>
      <% else %>
        <span class="clps05col clps">&nbsp;</span>
      <% end %>
      <span class="clps05col clps"><%= game.broadcast_listing.to_s %></span>
      <div class="clear"></div>
    </li>

<%
    end # close games loop
    
%>
  </ul>
<%
  end #close leagues loop
%>


<div id="<%= @drop_id %>_scroll-down" class="scroll-dwn" onmouseout="stopScroll();"><a href="*" name="scroll-dwn" class="dwn"></a></div>

<%=
  javascript_tag "
      Event.observe($('#{@drop_id}_scroll-up'), 'mouseover', scrollDropArea.bindAsEventListener($('#{@drop_id}_content'), '#{@drop_id}_content', -5));
      Event.observe($('#{@drop_id}_scroll-down'), 'mouseover', scrollDropArea.bindAsEventListener($('#{@drop_id}_content'), '#{@drop_id}_content', 5));"
  
%>